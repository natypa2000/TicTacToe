<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Player X's turn"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:id="@+id/gameBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button android:id="@+id/button00" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button01" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button02" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button10" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button11" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button12" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button20" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button21" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>
        <Button android:id="@+id/button22" android:layout_width="0dp" android:layout_height="100dp" android:layout_columnWeight="1" android:textSize="40sp"/>

    </GridLayout>

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</LinearLayout>